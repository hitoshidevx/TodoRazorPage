@page
@model TodoRazorPages.Pages.Todos.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
     
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Todo[0].EstadoTarefa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Todo) {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EstadoTarefa)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.TodoId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.TodoId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.TodoId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
